{
  "name": "kaiverse",
  "private": true,
  "description": "Collection of powerful utility functions, React components & hooks",
  "repository": "https://github.com/kaisergeX/kaiverse.git",
  "scripts": {
    "build": "turbo build",
    "build:pkgs": "turbo build --filter=./packages/*",
    "dev": "turbo dev",
    "lint": "turbo lint --filter=./packages/*",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "rm -rf {node_modules,.turbo} && pnpm -r exec rm -rf {node_modules,dist,.turbo}",
    "publish:npm": "turbo run build lint --filter=./packages/k && pnpm publish --filter './packages/k' --access public && changeset tag"
  },
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@eslint/js": "^9.16.0",
    "eslint": "^9.16.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.13.0",
    "prettier": "^3.4.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  }
}
