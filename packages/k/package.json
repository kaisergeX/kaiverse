{
  "name": "@kaiverse/k",
  "version": "0.2.0",
  "description": "A collection of powerful utility functions, feature-rich uncommon React components, and hooks.",
  "author": "Vu Duc Khai",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "react",
    "components",
    "utilities",
    "hooks",
    "terminal",
    "dialog",
    "swiper"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kaisergeX/kaiverse.git",
    "directory": "packages/k"
  },
  "bugs": {
    "url": "https://github.com/kaisergeX/kaiverse/issues"
  },
  "homepage": "https://kaisergex.github.io/kaiverse/",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -p ./tsconfig.lib.json && vite build",
    "lint": "tsc -p ./tsconfig.app.json --noEmit && eslint . --report-unused-disable-directives --max-warnings 0 && prettier --check \"{src,lib}/**/*.{ts,tsx,css}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "preview": "vite preview"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "imports": {
    "#*": "./lib/*/index.ts",
    "#*/": "./lib/*"
  },
  "exports": {
    "./ui": {
      "types": "./dist/components/index.d.ts",
      "default": "./dist/components/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "default": "./dist/hooks/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "glob": "^11.0.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup-preserve-directives": "^1.1.2",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.5.3",
    "vite": "^5.4.1",
    "vite-plugin-dts": "^4.2.3",
    "vite-plugin-lib-inject-css": "^2.1.1"
  }
}